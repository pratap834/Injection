<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      background-image: url("https://wallpapercave.com/wp/wp5207820.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      height: 100vh;
      color: aliceblue;
      text-align: center; 
      align-items: center;
    }

    form {
      max-width: 400px;
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.8);
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center; 
      margin-left: 100px;

      --darkblue: #040a2c;
      --lightred: #ff0000;
      --lightblack:#000000;
      border: 3px solid var(--lightred);
      box-shadow: 0 0 15px var(--lightred),inset 0 0 15px var(--lightred);
    }

    button {
      width: 100%;
      padding: 10px;
      background-color: #c11515;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .over{
      align-items: left;
    }
    .h1{
      color: #fff;
      text-align: left;
    }
    .ov{ 
      text-align: center;
    }
    .ext1{
      margin-top: -0px;
    }
    h2{
      
      margin-left: -850px;
      text-align: center;
      color: red;
      font-size: 25px;
    }
    input{
      width: 80%;
      padding: 10px;

    }
  </style>
  
  <title>Imperial Support</title>
</head>
<body>
  
  <%- include('navbar'); -%>
    <div class="ext1">
      <div class="ov">
        <h2>Raise a support ticket</h2>
        <form onsubmit="uploadData()">
          <input id="input" placeholder="Enter your issue here" value="" />
          <button type="submit">Submit ticket</button>
        </form>
      </div>
    </div>
</body>

<script>
  const tokenField = document.getElementById('input');

  async function uploadData() {
    const data = JSON.stringify({ticket: tokenField.value})
    const response = await fetch("/upload", {
      method: "POST", 
      headers: {"Content-Type": "application/json"},
      body: data
    })
    console.log(data)
    const result_data = await response.json();
    if (result_data.message === "success") {
      window.alert(`Your support ticket ${tokenField.value} has been uploaded successfully.`);
    } else {
      window.alert("Your support ticket couldn't be uploaded.");
    }
  }
</script>
</html>
